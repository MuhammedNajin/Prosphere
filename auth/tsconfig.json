{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../../",
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@domain/*": ["src/domain/*"], // Alias for the domain folder
      "@application/*": ["src/application/*"], // Alias for the application folder
      "@infra/*": ["src/infra/*"], // Alias for the infra folder
      "@presentation/*": ["src/presentation/*"]
    }

  },
  "include": [
    "src/**/*",
    "../../common/src/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}