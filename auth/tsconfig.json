{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../../",
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": "./",

  },
  "include": [
    "src/**/*",
    "../../common/src/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}